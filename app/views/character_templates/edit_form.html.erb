
<!-- Validation failure messages -->
<% if @character.errors.any? %>
  <% @character.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>


<h1>
  Edit character #<%= @character.id %>
</h1>

<hr>

<form action="/update_character/<%= @character.id %>" method="post">

  <!-- Label and input for movie_id -->

  <div class="form-group">
    <label for="movie_id">
      Movie
    </label>


<!--    <input type="text" id="movie_id" name="movie_id" class="form-control" value="<%= @character.movie_id %>"> -->
    <%= select_tag("movie_id", options_from_collection_for_select(Movie.all, :id, :title, @character.try(:movie_id)), :class => "form-control") %>
  </div>
<a href="/movies/new">or add a new movie</a>


  <!-- Label and input for actor_id -->

  <div class="form-group">
    <label for="actor_id">
      Actor
    </label>


    <input type="text" id="actor_id" name="actor_id" class="form-control" value="<%= @character.actor_id %>">

  </div>



  <!-- Label and input for name_string -->

  <div class="form-group">
    <label for="name_string">
      Name string
    </label>


    <input type="text" id="name_string" name="name_string" class="form-control" value="<%= @character.name_string %>">

  </div>



  <button class="btn btn-block btn-outline-secondary">
    Update character
  </button>
</form>

<hr>

<a href="/characters">
  Go back
</a>
